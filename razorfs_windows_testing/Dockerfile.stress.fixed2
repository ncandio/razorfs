# RAZOR Filesystem Docker - With Stress Testing Tools (Fixed)
FROM ubuntu:22.04 as base

# Set timezone and avoid interactive prompts
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=UTC

# Install system dependencies and testing tools
RUN apt-get update && apt-get install -y \
    build-essential \
    pkg-config \
    libfuse3-dev \
    fuse3 \
    git \
    python3 \
    python3-pip \
    fio \
    btrfs-progs \
    reiserfsprogs \
    xfsprogs \
    squashfs-tools \
    sysstat \
    && rm -rf /var/lib/apt/lists/*

# Install Python packages
RUN pip3 install matplotlib seaborn pandas numpy

WORKDIR /razorfs
COPY ../ .

# Build FUSE implementation
FROM base as fuse-builder
# Skip FUSE build - assuming pre-built binary will be provided
RUN echo "Skipping FUSE build - using pre-built binary"

# Runtime environment with testing tools
FROM ubuntu:22.04 as stress-runtime

# Set timezone and avoid interactive prompts
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=UTC

# Install essential packages first
RUN apt-get update && apt-get install -y \
    libfuse3-3 \
    fuse3 \
    util-linux \
    python3 \
    python3-pip \
    fio \
    btrfs-progs \
    reiserfsprogs \
    xfsprogs \
    squashfs-tools \
    sysstat \
    procps \
    && rm -rf /var/lib/apt/lists/*

# Install additional packages that are commonly available
RUN apt-get update && apt-get install -y \
    python3-matplotlib \
    python3-numpy \
    python3-pandas \
    && rm -rf /var/lib/apt/lists/*

# Try to install optional packages, but don't fail if they're not available
RUN apt-get update && apt-get install -y \
    time \
    bc \
    htop \
    || echo "Some optional packages not available, continuing..."

# Try to install stress-ng separately since it might not be in default repos
RUN apt-get update && apt-get install -y \
    stress-ng \
    || echo "stress-ng not available, installing from snap (if needed)..." \
    && echo "Note: stress-ng functionality will be limited"

RUN mkdir -p /mnt/razorfs_test /tmp/razor_test_mount /results

# Copy built FUSE binary and stress testing scripts
RUN echo "Skipping FUSE binary copy"
COPY . /razorfs

# Make our new scripts executable
RUN find /razorfs/razorfs_windows_testing -name "*.sh" -exec chmod +x {} \;
RUN find /razorfs/razorfs_windows_testing -name "*.py" -exec chmod +x {} \;

WORKDIR /razorfs

# Install Python packages for graphing (in case they weren't installed properly above)
RUN pip3 install matplotlib seaborn pandas numpy

# Copy entrypoint script
COPY ./razorfs_windows_testing/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

ENTRYPOINT ["/entrypoint.sh"]
CMD ["shell"]