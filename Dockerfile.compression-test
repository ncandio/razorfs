    python3 \
    python3-pip \
    strace \
    htop \
    file \
    bc \
    util-linux \
    time \
    numactl \
    && rm -rf /var/lib/apt/lists/*

# Create working directory
WORKDIR /app

# Copy source code
COPY . /app/

